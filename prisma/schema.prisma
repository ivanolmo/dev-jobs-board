generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Job {
  id           String   @id @unique @default(cuid())
  company      String   @db.VarChar(50)
  logoUrl      String?  @db.VarChar(100)
  location     String   @db.VarChar(50)
  jobType      String   @db.VarChar(50)
  applyUrl     String   @db.VarChar(100)
  description  String   @db.VarChar(1000)
  jobTitle     String   @db.VarChar(50)
  companyUrl   String   @db.VarChar(100)
  logoBgColor  String?  @db.VarChar(20)
  createdAt    DateTime @default(now())
  duties       Json
  requirements Json
  salary       String   @db.VarChar(50)
}
